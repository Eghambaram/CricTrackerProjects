<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.myapp.com.crictracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".acitivity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".acitivity.LoginActivity"
            android:label="@string/activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitivity.PlayerActivity"
            android:label="@string/activity_player"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitivity.PlayerInfoActivity"
            android:label="@string/player_info"
            android:parentActivityName=".acitivity.PlayerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitivity.PlayerUpdateActivity"
            android:label="@string/title_activity_player_update"
            android:parentActivityName=".acitivity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitivity.StatsActivity"
            android:label="@string/title_activity_stats"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>